<h3 class="matched"> <%= @showAllOrgs ? 'Take the quiz to get matched with orgs!' : 'Your matched organizations' %> </h3>
<div>
<% if @organizations%>
  <% @organizations.each_with_index do |org, i| %>
  <!-- Modal -->
    <div class="modal fade" id="<%= 'modal-' + i.to_s %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title text-center w-100"><%= org.name %></h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="text-center"> 
              <%= image_tag(org.imageUrl) %>
            </div>
            <div>
              <h4>Description</h4>
              <%= raw org.description %>
            </div>
            <div> 
              <h4>Contact Information</h4>
              <% if not org.phone_number.blank?%>
                <i class="fa fa-phone fa-2x"></i> <%= org.phone_number %>
                <br>
              <% end %>
              <% if not org.email.blank?%>
                <i class="fa fa-envelope fa-2x"></i> <%= org.email %>
              <% end %>
              <div> 
                <% if not org.facebook.blank?%>
                  <a href="<%= org.facebook %>" target="_blank"><i class="fa fa-facebook-square fa-2x"></i></a>
                <% end %>
                <% if not org.twitter.blank?%>
                  <a href="<%= org.twitter %>" target="_blank"><i class="fa fa-twitter-square fa-2x"></i></a>
                <% end %>
                <% if not org.website.blank?%>
                  <a href="<%= org.website.include?('http') ? org.website : 'http://' + org.website %>" target="_blank"><i class="fa fa-globe fa-2x"></i></a>
                <% end %>
              </div>
            </div>
            <br>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <div class='container'>
    <div class='orgs'>
      <% @organizations.each_with_index do |org, i| %>
        <div class="snip1104 blue">
          <%= image_tag(org.imageUrl) %>
          <figcaption>
            <h4><%= org.name %></h2>
          </figcaption>
          <div class='fig-holder'>
            <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#<%= 'modal-' + i.to_s %>">Learn More</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>